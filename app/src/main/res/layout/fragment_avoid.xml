<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".fragments.Avoid">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_bottombar_content_15"
                android:backgroundTint="@color/background"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etEnterIngredient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="0.3"
                        android:background="@drawable/bg_rounded_ractangle_10"
                        android:backgroundTint="@color/bg"
                        android:fontFamily="@font/p_medium"
                        android:hint="Enter Ingredients"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/btnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:background="@drawable/bg_rounded_ractangle_10"
                        android:backgroundTint="@color/colorAccent"
                        android:fontFamily="@font/p_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/background"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_report"
                            app:tint="@color/text4" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/p_semibold"
                    android:maxLines="1"
                    android:text="Banned Ingredients List"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/p_medium"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="Sort"
                    android:textColor="@color/text4"
                    android:textSize="@dimen/_9sdp" />

                <ImageView
                    android:id="@+id/btnSort"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_sort"
                    app:tint="@color/text4" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAvoidList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:adjustViewBounds="true"
                android:background="@color/background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/background"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/text4" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/p_semibold"
                    android:maxLines="1"
                    android:text="Add Diet"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/_9sdp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDietsList"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@color/background" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>